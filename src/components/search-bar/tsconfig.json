{
    "compilerOptions": {
        "target": "ES2019",
        "module": "ESNext",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "dist",
        "strict": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": ["*.ts", "*.tsx"],
    "exclude": ["node_modules", "dist"]
}